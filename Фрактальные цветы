from turtle import *

# Настройка окна
w = Screen()
w.bgcolor("#f0fff0")  # Светло-зелёный фон

# Настройки пера
color("#5db35d")  # Цвет веток (зелёный)
pensize(3)
speed(6)
ht()  # Скрыть курсор

def tree(s, a, l):
    """
    Рисует ствол длиной s, а затем веточки с углом a и уровнем рекурсии l
    """
    fd(s)             # Рисуем ствол
    branch(s, a, l)   # Рисуем веточки
    fd(-s)            # Возвращаемся назад по стволу

def branch(s, a, l):
    """
    Рекурсивная функция рисования веток
    """
    if l > 1:
        lt(a)                # Поворот влево на угол a
        tree(s * 0.7, a, l - 1)  # Левая ветка (уменьшаем длину)
        rt(2 * a)            # Поворот вправо на 2*a (проходит угол a вправо от исходного)
        tree(s * 0.7, a, l - 1)  # Правая ветка
        lt(a)                # Возвращаемся к исходному направлению
    else:
        # Конец ветки - рисуем лист или утолщение ветки
        pensize(6)
        color("#8b4599")  # Сиреневый цвет для листа или толстого конца
        fd(s)
        fd(-s)
        pensize(3)
        color("#5db35d")

left(90)          # Поворачиваем "вверх" для начала рисования
tree(30, 15, 5)   # Запускаем рисование: длина 30, угол 15, глубина 5

done()  # Завершаем рисование, окно не закроется сразу
